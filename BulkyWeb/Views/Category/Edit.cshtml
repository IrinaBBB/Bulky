@model Category

<form method="post">
    <input type="hidden" asp-for="Id"/>
    <div class="border p-5 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit category</h2>
            <hr/>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3 row">
            <span class="p-0 mt-1" asp-validation-for="Name"></span>
            <input asp-for="Name" class="form-control"/>
            <label asp-for="Name" class="p-0"></label>
        </div>
        <div class="mb-3 row">
            <span class="p-0 mt-1" asp-validation-for="DisplayOrder"></span>
            <input asp-for="DisplayOrder" class="form-control" />
            <label asp-for="DisplayOrder" class="p-0"></label>
        </div>
        <div class="row">
            <div class="col-6 col-lg-3">
                <button type="submit" class="btn btn-primary form-control">
                    Edit
                </button>
            </div>
            <div class="col-6 col-lg-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</form>

@section Scripts 
{
    <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
} 
